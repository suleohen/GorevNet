@model GorevNet.Models.ViewModels.ManagerDashboardViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Admin Dashboard";
}

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Admin Dashboard</h1>
    <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        <i class="fas fa-download fa-sm text-white-50"></i> Rapor Oluştur
    </a>
</div>

<!-- Content Row -->
<div class="row">

    <!-- Total Employees Card -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Toplam Personel
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalEmployees</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-users fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Active Tasks Card -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Aktif Görevler
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ActiveTasks</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-tasks fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Pending Tasks Card -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Bekleyen Görevler
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.PendingTasks</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-clock fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Overdue Tasks Card -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            Süresi Geçen Görevler
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.OverdueTasks</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-exclamation-triangle fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Content Row -->
<div class="row">

    <!-- Recent Employees -->
    <div class="col-lg-6 mb-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Son Eklenen Personeller</h6>
                <a href="/Admin/ListEmployee" class="btn btn-primary btn-sm">
                    <i class="fas fa-eye"></i> Tümünü Gör
                </a>
            </div>
            <div class="card-body">
                @if (Model.RecentEmployees.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-bordered" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>İsim</th>
                                    <th>Departman</th>
                                    <th>Pozisyon</th>
                                    <th>Başlangıç Tarihi</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var employee in Model.RecentEmployees)
                                {
                                    <tr>
                                        <td>@employee.FullName</td>
                                        <td>@employee.Department</td>
                                        <td>@employee.Position</td>
                                        <td>@employee.HireDate.ToString("dd/MM/yyyy")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-users fa-3x text-gray-300 mb-3"></i>
                        <h5 class="text-gray-500">Henüz personel bulunmuyor</h5>
                        <p class="text-gray-400">Yeni personel eklemek için <a href="/Admin/CreateEmployee">buraya tıklayın</a>.</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="col-lg-6 mb-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Hızlı Erişim</h6>
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    <a href="/Admin/CreateTask" class="list-group-item list-group-item-action">
                        <i class="fas fa-plus fa-fw mr-2 text-primary"></i>
                        Yeni Görev Oluştur
                    </a>
                    <a href="/Admin/ActiveTasks" class="list-group-item list-group-item-action">
                        <i class="fas fa-tasks fa-fw mr-2 text-success"></i>
                        Aktif Görevleri Görüntüle
                    </a>
                    <a href="/Admin/CreateEmployee" class="list-group-item list-group-item-action">
                        <i class="fas fa-user-plus fa-fw mr-2 text-info"></i>
                        Yeni Personel Ekle
                    </a>
                    <a href="/Admin/ListEmployee" class="list-group-item list-group-item-action">
                        <i class="fas fa-users fa-fw mr-2 text-warning"></i>
                        Personelleri Listele
                    </a>
                </div>
            </div>
        </div>

        <!-- Statistics Card -->
        <div class="card shadow">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Görev İstatistikleri</h6>
            </div>
            <div class="card-body">
                <h4 class="small font-weight-bold">
                    Tamamlanma Oranı
                    <span class="float-right">%@Model.TaskCompletionRate.ToString("F1")</span>
                </h4>
                <div class="progress mb-4">
                    <div class="progress-bar bg-success" role="progressbar"
                         style="width: @(Model.TaskCompletionRate)%"
                         aria-valuenow="@Model.TaskCompletionRate"
                         aria-valuemin="0"
                         aria-valuemax="100"></div>
                </div>

                <div class="row text-center">
                    <div class="col">
                        <div class="border-right">
                            <h5 class="font-weight-bold text-success">@Model.CompletedTasks</h5>
                            <small class="text-muted">Tamamlandı</small>
                        </div>
                    </div>
                    <div class="col">
                        <h5 class="font-weight-bold text-primary">@Model.TotalTasks</h5>
                        <small class="text-muted">Toplam</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>