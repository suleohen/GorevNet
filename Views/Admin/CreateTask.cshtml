@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model GorevNet.ViewModels.CreateTaskViewModel

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Yeni Görev Oluştur</h1>
</div>

<div class="p-5">
    <div class="text-center">
        <h1 class="h4 text-gray-900 mb-4">Görev Bilgileri</h1>
    </div>

    <form asp-action="CreateTask" method="post" class="user">
        @Html.AntiForgeryToken()

        <!-- Title -->
        <div class="form-group">
            <input asp-for="Title" class="form-control form-control-user" placeholder="Görev Başlığı" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <!-- Description -->
        <div class="form-group">
            <textarea asp-for="Description" class="form-control form-control-user" rows="3" placeholder="Görev Açıklaması"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <!-- Priority -->
            <div class="col-sm-6 mb-3 mb-sm-0">
                <label>Öncelik</label>
                <select asp-for="Priority" asp-items="Html.GetEnumSelectList<GorevNet.Models.TaskPriority>()" class="form-control form-control-user"></select>
                <span asp-validation-for="Priority" class="text-danger"></span>
            </div>

            <!-- Due Date -->
            <div class="col-sm-6">
                <label>Bitiş Tarihi</label>
                <input asp-for="DueDate" type="date" class="form-control form-control-user" />
                <span asp-validation-for="DueDate" class="text-danger"></span>
            </div>
        </div>

        <!-- Assigned User -->
        <div class="form-group">
            <label>Çalışan</label>
            <select asp-for="AssignedUserId" asp-items="Model.Employees" class="form-control form-control-user"></select>
            <span asp-validation-for="AssignedUserId" class="text-danger"></span>
        </div>

        <!-- Comment -->
        <div class="form-group">
            <textarea asp-for="Comment" class="form-control form-control-user" rows="2" placeholder="Yorum (Opsiyonel)"></textarea>
            <span asp-validation-for="Comment" class="text-danger"></span>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary btn-user btn-block">
            Görev Oluştur
        </button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
