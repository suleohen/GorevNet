@model GorevNet.Models.ViewModels.UserProfileViewModel
@{
    ViewBag.Title = "Profili Düzenle";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-edit"></i> Profili Düzenle
                    </h4>
                    <a href="@Url.Action("Profile", "Account")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Geri Dön
                    </a>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form asp-action="EditProfile" method="post" class="needs-validation" novalidate>
                        @Html.AntiForgeryToken()
                        <input asp-for="Id" type="hidden" />

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="FirstName" class="form-label">
                                        <i class="fas fa-user"></i> @Html.DisplayNameFor(m => m.FirstName)
                                    </label>
                                    <input asp-for="FirstName" class="form-control" placeholder="Adınızı giriniz" />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="LastName" class="form-label">
                                        <i class="fas fa-user"></i> @Html.DisplayNameFor(m => m.LastName)
                                    </label>
                                    <input asp-for="LastName" class="form-control" placeholder="Soyadınızı giriniz" />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Email" class="form-label">
                                        <i class="fas fa-envelope"></i> @Html.DisplayNameFor(m => m.Email)
                                    </label>
                                    <input asp-for="Email" class="form-control" type="email" placeholder="email@domain.com" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                    <div class="form-text">
                                        <i class="fas fa-info-circle"></i> Email adresinizi değiştirirseniz, yeni email ile giriş yapmanız gerekecek.
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="HireDate" class="form-label">
                                        <i class="fas fa-calendar"></i> @Html.DisplayNameFor(m => m.HireDate)
                                    </label>
                                    <input asp-for="HireDate" class="form-control" type="date" readonly />
                                    <div class="form-text">
                                        <i class="fas fa-lock"></i> İşe giriş tarihi değiştirilemez.
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Department" class="form-label">
                                        <i class="fas fa-building"></i> @Html.DisplayNameFor(m => m.Department)
                                    </label>
                                    <input asp-for="Department" class="form-control" placeholder="Departmanınız" readonly />
                                    <div class="form-text">
                                        <i class="fas fa-lock"></i> Departman bilgisi yönetici tarafından değiştirilebilir.
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Position" class="form-label">
                                        <i class="fas fa-briefcase"></i> @Html.DisplayNameFor(m => m.Position)
                                    </label>
                                    <input asp-for="Position" class="form-control" placeholder="Pozisyonunuz" readonly />
                                    <div class="form-text">
                                        <i class="fas fa-lock"></i> Pozisyon bilgisi yönetici tarafından değiştirilebilir.
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Güvenlik Uyarısı -->
                        <div class="alert alert-warning" role="alert">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-shield-alt fa-2x"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h6 class="alert-heading">Güvenlik Bilgisi</h6>
                                    <p class="mb-2">
                                        • Sadece kişisel bilgilerinizi (ad, soyad, email) düzenleyebilirsiniz.<br>
                                        • Departman ve pozisyon bilgileriniz yöneticiniz tarafından belirlenir.<br>
                                        • Email adresinizi değiştirirseniz, sistem otomatik olarak çıkış yapacak ve yeni email ile tekrar giriş yapmanız gerekecek.
                                    </p>
                                    <hr>
                                    <div class="mb-0">
                                        <a href="@Url.Action("ChangePassword", "Account")" class="btn btn-outline-warning btn-sm">
                                            <i class="fas fa-key"></i> Şifre Değiştir
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Profile", "Account")" class="btn btn-secondary">
                                <i class="fas fa-times"></i> İptal
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Değişiklikleri Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Form validation
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();

        // Email değişikliği uyarısı
        document.getElementById('Email').addEventListener('change', function() {
            if (this.dataset.originalValue && this.value !== this.dataset.originalValue) {
                Swal.fire({
                    title: 'Email Değişikliği',
                    text: 'Email adresinizi değiştirirseniz, sistem otomatik olarak çıkış yapacak ve yeni email ile tekrar giriş yapmanız gerekecek.',
                    icon: 'warning',
                    confirmButtonText: 'Anladım'
                });
            }
        });

        // Sayfa yüklendiğinde orijinal email değerini sakla
        document.addEventListener('DOMContentLoaded', function() {
            const emailInput = document.getElementById('Email');
            emailInput.dataset.originalValue = emailInput.value;
        });
    </script>
}

<style>
    .form-label {
        font-weight: 600;
        margin-bottom: 0.5rem;
    }
